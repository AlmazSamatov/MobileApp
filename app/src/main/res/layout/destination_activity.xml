<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/destination_address_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/destination_address_info"
        android:textSize="30sp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorAccent" />

    <TextView
        android:id="@+id/info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Russia, Innopolis, University str., 1, 420500"
        android:textSize="30sp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/destination_address_info"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="5dp"
        android:textColor="@color/colorAccent" />

    <Button
        android:id="@+id/show_in_map"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/rounded_button_green"
        android:text="@string/build_the_route"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="15dp"
        android:textSize="22sp"
        android:textAllCaps="false"
        android:visibility="visible" />

</android.support.constraint.ConstraintLayout>